#include <stdio.h>
int main(void)
{  
int score[10];  
int i, j, sum, tmp;  
float average;  
//점수 입력  
for (i=0;i<10;i++)  
{     
printf("%d번째 점수를 입력하세요 : ", i);     
scanf("%d", &score[i]);  
}  
//평균 계산
for (i = sum = 0;i<10;i++)  
sum += score[i];
average = sum / 10.0;
printf("성적 평균 : %f\n", average);
//점수 정렬 : 버블 정렬
for (i=0;i<9;i++) 
for (j=9;j>i;j--)  
if (score[j-1] > score[j])   
{     
tmp = score[j-1];     
score[j-1] = score[j];     
score[j] = tmp;   
}  
//점수순으로 출력  
printf("성적순 : ");  
for (i=0;i<10;i++)    
printf("%d", score[i]);  
printf("\n");  
return 0;
} 
